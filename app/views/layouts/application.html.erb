<!DOCTYPE html>
<html>
  <head>
    <title>My-Hd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
  </head>
  <body>
    <nav class="navbar navbar-primary navbar-expand-lg navbar-light fixed-top">
      <a href="/" class="navbar-brand" id="logo-link"> <%= image_tag 'logo.png', id: 'logo' %> </a>
      <button class="navbar-toggler toggle-nav navbar-light-toggler-bg" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Videos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Search</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Signup</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Login</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="site-wrapper">
      <%= render 'shared/flash' %>
        <%= yield %>
    </div>

    <%= javascript_include_tag 'application' %>
  </body>
</html>
